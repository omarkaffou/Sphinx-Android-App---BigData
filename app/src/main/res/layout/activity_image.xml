<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Image">

    <com.example.sphinxpfa.SomeView
        android:id="@+id/some_View"
        android:layout_width="405dp"
        android:layout_height="631dp"
        android:background="@drawable/p8"
        app:strokeColor="#000000"
        app:strokeWidth="5dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="107dp">

    </com.example.sphinxpfa.SomeView>

    <EditText
        android:id="@+id/nomalie"
        android:layout_width="155dp"
        android:layout_height="46dp"
        android:layout_marginVertical="586dp"
        android:layout_marginBottom="90dp"
        android:width="50dp"
        android:height="50dp"
        android:background="@drawable/nomalie_text"
        android:drawablePadding="8dp"
        android:elevation="3dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Anomalie"
        android:inputType="textLongMessage"
        android:textColor="#000000"

        android:textColorHint="#707070"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/some_View"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        ></EditText>

    <ImageView
        android:id="@+id/addnoma"
        android:layout_width="47dp"
        android:layout_height="45dp"
        android:layout_marginVertical="590dp"
        android:layout_marginStart="263dp"


        android:background="@drawable/addnoma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nomalie"
        app:shapeAppearanceOverlay="@style/Circular"
        tools:layout_editor_absoluteY="40dp"></ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>